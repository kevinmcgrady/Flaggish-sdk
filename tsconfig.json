{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es5",
    "types": ["node"],
    "module": "esnext",
    "lib": ["es2015", "DOM"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true
  }
}
